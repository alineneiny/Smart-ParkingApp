<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cars"
    tools:context=".ui.ContactUsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="280dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/call"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/raveWhite"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/call_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:tint="@color/purple_200"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_call" />


                <TextView
                    android:id="@+id/call_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/call_icon"
                    android:layout_centerHorizontal="true"
                    android:text="Call us"
                    android:textColor="@color/purple_200"
                    android:textSize="12sp" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:id="@+id/sms"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/sms_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:tint="@color/purple_200"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_sms" />


                <TextView
                    android:id="@+id/sms_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple_200"
                    android:layout_below="@+id/sms_icon"
                    android:layout_centerHorizontal="true"
                    android:text="SMS"
                    android:textSize="12sp" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/mail_icon"
                    android:layout_width="30dp"
                    app:tint="@color/purple_200"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_email" />

                <TextView
                    android:id="@+id/mail_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple_200"
                    android:layout_below="@+id/mail_icon"
                    android:layout_centerHorizontal="true"
                    android:text="Email us"
                    android:textSize="12sp" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>

</LinearLayout>