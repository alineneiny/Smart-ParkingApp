<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ReservationActivity">

    <ImageView
        android:id="@+id/image3"
        android:layout_width="wrap_content"
        android:layout_height="146dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/gg" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book your parking slot"
            android:textColor="@color/raveBlack"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_above="@+id/linearLayout"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/editTextEntryDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#028C8484"
            android:inputType="date"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Booking date"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_calendar"
            android:drawableRight="@drawable/ic_calendar" />

        <EditText
            android:id="@+id/editTextEntryTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#028C8484"
            android:inputType="time"
            android:padding="10dp"
            android:hint="Entry time"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_time"
            android:drawableRight="@drawable/ic_time"/>


        <EditText
            android:id="@+id/editTextExitTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#028C8484"
            android:inputType="time"
            android:padding="10dp"
            android:hint="Exit time"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_time"
            android:drawableRight="@drawable/ic_time"/>

        <Button
            android:id="@+id/reservationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/black"
            android:text="Book slot"
            android:textSize="20sp"
            android:background="@color/green"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/passwordEditText"/>

    </LinearLayout>

</RelativeLayout>